.wall
  width 100%
  .footer
    height 45px
    //background-color #2d312f
    background-color #f2f2f2
    opacity 0.8
    position fixed
    bottom 0
    width 100%
    input
      margin-top 1%
      margin-left 10px
      width 60%
      height 38px
      padding 0 20px
      border-radius 20px
      font-size 14px
      outline none
      border none
    .btn
      margin-top 1.5%
      float right
      margin-right 10px
      width 16%
      height 33px
      border-radius 5px
      border none
      color #ffffff
      font-size 16px
      display table-cell
      //background #55acee
      vertical-align middle
      outline none
  .content
    width 100%
    margin-top 20px
    margin-bottom 60px
    li
      width 100%
      display block
      min-height 40px
      list-style none
      font-size 16px
      margin-bottom 20px
      line-height 40px
      overflow auto
      span
        display block
        float right
        border 1px solid #55acee
        border-radius 10px
        padding 0 8px
        vertical-align middle
        max-width 60%
        word-break normal
        white-space pre-wrap
        word-wrap  break-word
        overflow hidden
      img
        width 40px
        height 40px
        border-radius 20px
        border 1px solid #cccccc
        margin  0 8px
        float right
