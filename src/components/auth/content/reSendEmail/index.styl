.re-send-email
  width 100%
  .content
    width 100%
    height 500px
    margin-top 120px
    input
      display block
      width 70%
      margin 0 auto
      height 40px
      border-radius 5px
      border 1px solid #cccccc
      font-size 16px
      padding-left 10px
      outline none
      -moz-box-sizing: border-box
      -webkit-box-sizing border-box
      -o-box-sizing border-box
      -ms-box-sizing border-box
      box-sizing border-box
    button
      width 70%
      height 40px
      margin 0 auto
      border-radius 5px
      font-size 16px
      background rgb(38,164,222)
      color #ffffff
      border none
      display block
      margin-top 30px
      outline none


