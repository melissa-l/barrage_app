.reset-pass
  width 100%
  height 100%
  .content
    min-height 380px
    background-size cover
    form
      width 80%
      height 200px
      margin 30px auto
      .form-item
        width 100%
        height 42px
        margin 6px auto
        line-height 30px
        input
          display block
          padding-left 30px
          border-radius 5px
          box-sizing border-box
          width 100%
          height 38px
          background url("../../../../images/icon_input.png") no-repeat
          background-position 0 -27px
          border 1px solid #ccc
          outline none
        button
          width 100%
          height 38px
          margin-top 8px
          border 1px solid rgb(38,164,222)
          border-radius 5px
          background rgb(38,164,222)
          color #fff
          font-size 18px
          outline none
